<% @apartments.each do |element|%>
<div class="card mb-3" style="max-width: 840px;">
  <div class="row g-0">
    <div class="col-md-4">
      <%= image_tag("red.png", size: "256x170") %>
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <% if policy(element).show? %>
          <h5 class="card-title"><strong><%= link_to element.name, apartment_path(element.id), class: '' %></strong></h5>
        <% end %>
        <small><i class='fas fa-map-marker-alt icon-size'></i> <%= element.address %></small><br>
        <% if policy(element).show? %>
         <%= link_to "See availability", apartment_path(element.id), class: 'btn btn-primary' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
<% end %>
